{
  "compilerOptions": {
      "rootDir": "./", // Projenin kök dizinini ayarlıyoruz
      "outDir": "./dist",
      "strict": true,
      "module": "commonjs",
      "target": "es6",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
  },
  "include": [
      "src/**/*",   
      "tests/**/*"   // tests klasöründeki tüm test dosyalarını dahil et
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}
